<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane styleClass="page-container" stylesheets="@../styles/styles.css"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.saferoom.gui.controller.FriendsController">

    <VBox spacing="0.0" StackPane.alignment="TOP_CENTER">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <children>
            <HBox spacing="12.0" alignment="CENTER_LEFT"  styleClass="add-friend-section">
                <children>
                    <TextField fx:id="searchField" promptText="Search users..." styleClass="search-field-compact" HBox.hgrow="ALWAYS" />
                    <JFXButton fx:id="addFriendButton" styleClass="add-friend-button" prefWidth="120" prefHeight="44">
                        <graphic>
                            <HBox spacing="8.0" alignment="CENTER">
                                <FontIcon iconLiteral="fas-user-plus" styleClass="add-friend-icon" />
                                <Label text="Add Friend" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                            </HBox>
                        </graphic>
                    </JFXButton>
                </children>
                <VBox.margin>
                    <Insets bottom="15.0" />
                </VBox.margin>
            </HBox>




            <HBox fx:id="filterBar" styleClass="filter-tabs" spacing="30.0" alignment="CENTER_LEFT">
                <children>
                    <JFXButton fx:id="onlineFilterButton" styleClass="filter-tab" text="Online" />
                    <JFXButton fx:id="allFilterButton" styleClass="filter-tab" text="All Friends" />
                    <JFXButton fx:id="pendingFilterButton" styleClass="filter-tab" text="Pending" />
                    <JFXButton fx:id="blockedFilterButton" styleClass="filter-tab" text="Blocked" />
                </children>
                <VBox.margin>
                    <Insets bottom="15.0" />
                </VBox.margin>
            </HBox>

            <VBox fx:id="friendsContainer" spacing="6.0" styleClass="friends-list-container" VBox.vgrow="ALWAYS" />

        </children>
    </VBox>

    <ListView fx:id="searchResultsList" visible="false" prefHeight="50" styleClass="search-results-list" maxHeight="200" StackPane.alignment="TOP_CENTER">
        <StackPane.margin>
            <Insets top="55.0" left="20.0" right="20.0" />
        </StackPane.margin>
    </ListView>

</StackPane>