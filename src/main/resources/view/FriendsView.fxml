<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<!-- âœ… FriendsView.fxml - Clean and Compact Layout -->
<VBox styleClass="page-container" spacing="0.0" stylesheets="@../styles/styles.css"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.saferoom.gui.controller.FriendsController"
      VBox.vgrow="ALWAYS">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <!-- Compact Header with Search -->
        <VBox spacing="8.0">
            <children>
                <!-- Search and Add Friend Button -->
                <HBox spacing="12.0" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="searchField" promptText="Search friends..." styleClass="search-field-compact" HBox.hgrow="ALWAYS" />
                        <JFXButton styleClass="add-friend-button" prefWidth="120" prefHeight="44">
                            <graphic>
                                <HBox spacing="8.0" alignment="CENTER">
                                    <FontIcon iconLiteral="fas-user-plus" styleClass="add-friend-icon" />
                                    <Label text="Add Friend" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                                </HBox>
                            </graphic>
                        </JFXButton>
                    </children>
                </HBox>
                <!-- Search Results List -->
                <ListView fx:id="searchResultsList" visible="false" prefHeight="200" styleClass="search-results-list" maxHeight="200" VBox.vgrow="NEVER" />
            </children>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </VBox>

        <!-- Enhanced Stats Cards -->
        <HBox spacing="16.0" alignment="CENTER" maxHeight="120">
            <children>
                <VBox styleClass="stat-card-enhanced" HBox.hgrow="ALWAYS" alignment="CENTER" prefHeight="100">
                    <children>
                        <Label fx:id="totalFriendsLabel" styleClass="stat-number-large" text="4" />
                        <Label styleClass="stat-label-enhanced" text="Friends" />
                    </children>
                </VBox>
                <VBox styleClass="stat-card-enhanced" HBox.hgrow="ALWAYS" alignment="CENTER" prefHeight="100">
                    <children>
                        <Label fx:id="onlineFriendsLabel" styleClass="stat-number-large" text="3" />
                        <Label styleClass="stat-label-enhanced" text="Online" />
                    </children>
                </VBox>
                <VBox styleClass="stat-card-enhanced" HBox.hgrow="ALWAYS" alignment="CENTER" prefHeight="100">
                    <children>
                        <Label fx:id="pendingFriendsLabel" styleClass="stat-number-large" text="1" />
                        <Label styleClass="stat-label-enhanced" text="Pending" />
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets bottom="65.0" />
            </VBox.margin>
        </HBox>

        <!-- Compact Filter Tabs -->
        <HBox fx:id="filterBar" styleClass="filter-tabs" spacing="4.0" alignment="CENTER_LEFT">
            <children>
                <JFXButton fx:id="onlineFilterButton" styleClass="filter-tab active-tab" text="Online" />
                <JFXButton fx:id="allFilterButton" styleClass="filter-tab" text="All" />
                <JFXButton fx:id="pendingFilterButton" styleClass="filter-tab" text="Pending" />
                <JFXButton fx:id="blockedFilterButton" styleClass="filter-tab" text="Blocked" />
            </children>
            <VBox.margin>
                <Insets bottom="12.0" />
            </VBox.margin>
        </HBox>

        <!-- Friends List -->
        <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" styleClass="friends-scroll">
            <content>
                <VBox fx:id="friendsContainer" spacing="6.0" styleClass="friends-list-container" />
            </content>
        </ScrollPane>
    </children>
</VBox>
