<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.saferoom.gui.controller.CallView"
      spacing="0" prefWidth="960" prefHeight="640"
      stylesheets="@../styles/call-view.css">

    <children>
        <Label fx:id="sharingBanner"
               text="You are sharing your screen"
               visible="false" managed="false"
               styleClass="sharing-banner"/>

        <StackPane alignment="CENTER"
                   VBox.vgrow="ALWAYS"
                   styleClass="call-stage">
            <Label text="Live call stage"
                   styleClass="call-stage-placeholder"/>
        </StackPane>

        <HBox alignment="CENTER" spacing="18"
              styleClass="call-controls">
            <children>
                <Button text="Mute"
                        styleClass="call-control-button"/>
                <Button text="Camera"
                        styleClass="call-control-button"/>
                <Button fx:id="shareButton"
                        text="Share Screen"
                        onAction="#handleShareButton"
                        styleClass="call-control-button, share-button"/>
                <Button text="Leave"
                        styleClass="call-control-button, danger"/>
            </children>
        </HBox>
    </children>
</VBox>

