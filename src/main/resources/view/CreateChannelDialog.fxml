<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20.0" prefWidth="350.0" styleClass="dialog-container" stylesheets="@../styles/styles.css,@../styles/dialog_styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saferoom.gui.controller.CreateChannelDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox spacing="10.0">
        <Label styleClass="dialog-section-label" text="Create" />
        <HBox spacing="20.0">
            <RadioButton fx:id="createCategoryRadio" text="Channel Category">
                <toggleGroup>
                    <ToggleGroup fx:id="creationTypeGroup" />
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="createChannelRadio" selected="true" text="Channel" toggleGroup="$creationTypeGroup" />
        </HBox>
    </VBox>

    <VBox fx:id="channelOptionsBox" spacing="10.0">
        <Label styleClass="dialog-section-label" text="Channel Type:" />
        <HBox spacing="20.0">
            <RadioButton fx:id="textChannelRadio" selected="true" text="Text Channel">
                <toggleGroup>
                    <ToggleGroup fx:id="channelTypeGroup" />
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="voiceChannelRadio" text="Voice Channel" toggleGroup="$channelTypeGroup" />
        </HBox>

        <VBox fx:id="voiceLimitBox" disable="true" spacing="5.0">
            <Label text="User Limit (1-12):" />
            <Spinner fx:id="userLimitSpinner" editable="true" initialValue="0" max="12" min="1" />
        </VBox>
    </VBox>

    <VBox spacing="5.0">
        <Label styleClass="dialog-section-label" text="Name:" />
        <TextField fx:id="nameField" promptText="Enter name..." />
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button fx:id="cancelBtn" mnemonicParsing="false" styleClass="dialog-button-secondary" text="Cancel" />
        <Button fx:id="createBtn" defaultButton="true" mnemonicParsing="false" styleClass="dialog-button-primary" text="Create" />
    </HBox>
</VBox>

